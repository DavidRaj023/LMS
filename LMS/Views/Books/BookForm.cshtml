@model LMS.ViewModel.BookViewModel

<form method="post", asp-action="SaveBooks", asp-controller="Books" enctype="multipart/form-data">
    <input asp-for="Book.Id" hidden />
	<input asp-for="Book.ImageUrl" hidden />

    <div class="row">
        <div class="col-10">
			<div class="border p-5 mt-4 row">
		<div class="col-12 pb-2">
			@*<h2 class="text-primary">@(@Model.Book.Id!=0?"Update": "Create")  Books</h2>*@
			<h2 class="text-primary">Add Books</h2>
			<hr />
		</div>

		<div class="book mb-3">
			<label asp-for="Book.Title"></label>
			<input asp-for="Book.Title" class="form-control" />
			<span asp-validation-for="Book.Title" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Book.Description"></label>
			<textarea asp-for="Book.Description" rows="3" class="form-control"></textarea>
			<span asp-validation-for="Book.Description" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.PublicationDate"></label>
			<input asp-for="Book.PublicationDate" type="date"  class="form-control"/>
			<span asp-validation-for="Book.PublicationDate" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.Language"></label>
			<input asp-for="Book.Language" class="form-control"/>
			<span asp-validation-for="Book.Language" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.Edition"></label>
			<input asp-for="Book.Edition" class="form-control" min="1"/>
			<span asp-validation-for="Book.Edition" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.RackId"></label>
			<input asp-for="Book.RackId" class="form-control" min="1"/>
			<span asp-validation-for="Book.RackId" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.NumberOfCopies"></label>
			<input asp-for="Book.NumberOfCopies" class="form-control" min="1"/>
			<span asp-validation-for="Book.NumberOfCopies" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.ReturnThreshold"></label>
			<input asp-for="Book.ReturnThreshold" class="form-control" min="1"/>
			<span asp-validation-for="Book.ReturnThreshold" class="text-danger"></span>
		</div>
		@*dfkjdfnkjdfnkdjfn
			sdfsdflmksd;lfksdf
			sdfl;ksndf;lskdnf
			sdflklsdnfskldfn
			Here
		*@
		<div class="mb-3 col-6">
			<label asp-for="Book.Category"></label>
			<select asp-for="Book.CategoryId" asp-items="@Model.CategoryList" class="form-select" onchange="showCatDiv(this)">
				<option disabled selected>--Select Category--</option>
			</select>
			<span asp-validation-for="Book.CategoryId" class="text-danger"></span>
		</div>
		
		<div class="mb-3 col-6" id="categorydiv" style="display:none">
			<label asp-for=Category.Name> Category Name </label>
			<input asp-for=Category.Name class="form-control" />
			<span asp-validation-for=Category.Name class="text-danger"></span>
		</div>

		<div class="mb-3 col-6">
			<label asp-for="Book.Author"></label>
			<select asp-for="Book.AuthorId" asp-items="@Model.AuthorList" class="form-select" onchange="showAuthDiv(this)">
				<option disabled selected>--Select Author--</option>
			</select>
			<span asp-validation-for="Book.AuthorId" class="text-danger"></span>
		</div>

		
		<div id="Authordiv" style="display:none">
			<div class="mb-3 col-12">
				<label asp-for=Author.Name> Author Name</label>
				<input asp-for=Author.Name class="form-control" />
				<span asp-validation-for=Author.Name class="text-danger"></span>
			</div>
			<div class="mb-3 col-12">
				<label asp-for=Author.Phone> Author Phone</label>
				<input asp-for=Author.Phone class="form-control" />
				<span asp-validation-for=Author.Phone class="text-danger"></span>
			</div>
			<div class="mb-3 col-12">
				<label asp-for=Author.Email> Author Email</label>
				<input asp-for=Author.Email class="form-control" />
				<span asp-validation-for=Author.Email class="text-danger"></span>
			</div>
			<div class="mb-3 col-12">
				<label asp-for=Author.Address>Author Address</label>
				<input asp-for=Author.Address class="form-control" />
				<span asp-validation-for=Author.Address class="text-danger"></span>
			</div>
		</div>

		<div class="mb-3 col-6">
			<label asp-for="Book.ImageUrl"></label>
			<input type="file" id="uploadBox" name="file" class="form-control" />
			<span asp-validation-for="Book.ImageUrl" class="text-danger"></span>
		</div>

		<div class="col-12">
			<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
			<a asp-controller="Books" asp-action="Index" class="btn btn-secondary" style="width:150px">
				Back to List
			</a>
		</div>
    </div>
</form>

<script>
function showCatDiv(ddl) {
	console.log("Onchange")
	var dv1 = document.getElementById("categorydiv");
    if (ddl.value == 1000) {
		console.log("Inside If")
        dv1.style.display = "block";
    } else {
		dv1.style.display = "none";
	}
}
function showAuthDiv(ddl) {
	console.log("Onchange")
	var dv1 = document.getElementById("Authordiv");
    if (ddl.value == 1000) {
		console.log("Inside If")
        dv1.style.display = "block";
    } else {
		dv1.style.display = "none";
	}
}
</script>