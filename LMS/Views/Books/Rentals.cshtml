@model IEnumerable<LMS.Models.Rental>
@{
    ViewData["Title"] = "Rentals";
}

<div class="container text-center">
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th class="th-sm">Customer Name
          </th>
          <th class="th-sm">Book Name
          </th>
          <th class="th-sm">Return Status
          </th>
          <th class="th-sm">Date Rented
          </th>
          <th class="th-sm">Date Return
          </th>
          <th class="th-sm">Penalty
          </th>
        </tr>
      </thead>
      <tbody>
            @foreach(var rent in @Model)
            {
                <tr>
                  <td>@rent.User.Name</td>
                  <td>@rent.Book.Title</td>
                    @if (@rent.IsReturned)
                    {
                        <td>Yes</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    <td>@rent.DateRented</td>
                    @if(@rent.DateReturn == null)
                    {
                        <td>----</td>
                    }
                    else
                    {
                        <td>@rent.DateReturn</td>
                    }
                    @if(@rent.PenaltyAmount >0){
                        <td>Rs. @rent.PenaltyAmount</td>
                    }else{
                        <td>Rs. 0</td>
                    }
                  
                </tr>
            }
        </tbody>
    </table>
</div>
