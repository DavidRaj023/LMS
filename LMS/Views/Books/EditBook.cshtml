@model LMS.ViewModel.BookViewModel

<form method="post", asp-action="UpdateBook", asp-controller="Books" enctype="multipart/form-data">
    <input asp-for="Book.Id" hidden />
	<input asp-for="Book.ImageUrl" hidden />

    <div class="row">
        <div class="col-10">
			<div class="border p-3 mt-4 row">
		<div class="col-12 pb-2">
			@*<h2 class="text-primary">@(@Model.Book.Id!=0?"Update": "Create")  Books</h2>*@
			<h2 class="text-primary">Update Books</h2>
			<hr />
		</div>

		<div class="book mb-3">
			<label asp-for="Book.Title"></label>
			<input asp-for="Book.Title" class="form-control" />
			<span asp-validation-for="Book.Title" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Book.Description"></label>
			<textarea asp-for="Book.Description" rows="3" class="form-control"></textarea>
			<span asp-validation-for="Book.Description" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.PublicationDate"></label>
			<input asp-for="Book.PublicationDate" type="date"  class="form-control"/>
			<span asp-validation-for="Book.PublicationDate" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.Language"></label>
			<input asp-for="Book.Language" class="form-control"/>
			<span asp-validation-for="Book.Language" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.Edition"></label>
			<input asp-for="Book.Edition" class="form-control" min="1"/>
			<span asp-validation-for="Book.Edition" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.RackId"></label>
			<input asp-for="Book.RackId" class="form-control" min="1"/>
			<span asp-validation-for="Book.RackId" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.NumberOfCopies"></label>
			<input asp-for="Book.NumberOfCopies" class="form-control" min="1"/>
			<span asp-validation-for="Book.NumberOfCopies" class="text-danger"></span>
		</div>

		<div class="mb-3 col-4">
			<label asp-for="Book.ReturnThreshold"></label>
			<input asp-for="Book.ReturnThreshold" class="form-control" min="1"/>
			<span asp-validation-for="Book.ReturnThreshold" class="text-danger"></span>
		</div>

		<div class="mb-3 col-6">
			<label asp-for="Book.Category"></label>
			<a class="btn btn-link float-lg-end" >New</a>
			<select asp-for="Book.CategoryId" asp-items="@Model.CategoryList" class="form-select">
				<option disabled selected>--Select Category--</option>
			</select>
			<span asp-validation-for="Book.Category" class="text-danger"></span>
		</div>

		<div class="mb-3 col-6">
			<label asp-for="Book.Author"></label>
			<a class="btn btn-link float-lg-end" >New</a>
			<select asp-for="Book.AuthorId" asp-items="@Model.AuthorList" class="form-select">
				<option disabled selected>--Select Author--</option>
			</select>
			<span asp-validation-for="Book.Author" class="text-danger"></span>
		</div>

		<div class="mb-3 col-6">
			<label asp-for="Book.ImageUrl"></label>
			<input type="file" id="uploadBox" name="file" class="form-control" />
		</div>

		<div class="col-12">
			<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
			<a asp-controller="Books" asp-action="Index" class="btn btn-secondary" style="width:150px">
				Back to List
			</a>
		</div>
    </div>
</form>