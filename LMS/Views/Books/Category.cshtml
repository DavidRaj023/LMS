@model IEnumerable<LMS.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container text-center">
    <div class="row">
    <div class="mb-3 col-1">
        <h2 class="display-6">Categories</h2>
    </div>
    <div class="col-md-4 ms-auto">
        <a asp-controller="Books" asp-action="NewCategory" class="btn btn-primary" style="width:150px">Add Category</a>
    </div>
</div>

<div class="row">
    @foreach(var category in Model){
        <div class="col-lg-4 btn  ">
            <a class="btn btn-outline-primary" id="list-button" href="categoryId=@category.Id">@category.Name</a>
        </div>
    }
</div>
