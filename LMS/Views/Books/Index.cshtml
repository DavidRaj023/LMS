@model IEnumerable<LMS.Models.Book>
@{
    ViewData["Title"] = "Books";
}

<div class="container ">
    <div class="row">
        <div class="mb-3 col-1">
            <h2 class="display-6">Books</h2>
        </div>
        <div class="col-md-3 ms-auto">
            <a asp-controller="Books" asp-action="New" class="btn btn-primary" style="width:150px">
            Add Book</a>
        </div>
    </div>
</div>

<div class="row">
    @foreach(var book in Model)
    {
        <div class="col-sm-4 btn">
            <div class="card" style="width: 18rem;" >
              <img class="card-img-top" src="/Images/Logo.jpg" alt="Card image Book"/ style="width: 100%; height: 15vw; object-fit: scale-down; padding: 10px;">
              <div class="card-header">
                <h6 class="card-text">@book.Title</h6>
              </div>
              
              <div class="card-footer">
                    <a class="btn btn-outline-primary form-control"  href="Books?id=@book.Id">More Info</a>    
              </div>
            </div>
        </div>
    }
</div>
