@model LMS.Models.Book
@{
    ViewData["Title"] = "Book";
}

@if(@ViewBag.Message != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
      @ViewBag.Message
    </div>   
}

<div>
    <a class="btn btn-secondary" style="width:150px" asp-controller="Books" asp-action="Back" asp-route-id="index">Back</a>
    <div id="bookcard">
        <div class="row">
            <div id="img-con" class="col-4">
                <img id="bookcard-img" class="rounded" src="@Model.ImageUrl"/>
            </div>
            <div id="bookcard-info" class="col">
                <h2>@Model.Title</h2>
                <h5>by @Model.Author.Name</h5>
                <div class="row">
                    <div class="col-sm">
                        <a class="btn btn-sm btn-primary">Edition: @Model.Edition</a>
                        <a class="btn btn-sm btn-success">@Model.Language</a>
                        <a class="btn btn-sm btn-primary"> @Model.Category.Name</a>
                    </div>
                </div>
                
                <p>@Model.Description</p>
                <div>
                    @if (@Model.IsAvailable && @Model.NumberOfCopies >0)
                    {
                        <a class="btn btn-outline-success" asp-action="AddToReadings" asp-route-bookId="@Model.Id" asp-controller="Books">Add to Readings</a>    
                    }else{
                        <a class="btn btn-danger" >Not Available</a>    
                    }
              </div>
            </div>
        </div>
    </div>
</div>

