@model IEnumerable<LMS.Models.Author>
@{
    ViewData["Title"] = "Authors";
}

<div class="container text-center">
    <div class="row">
    <div class="mb-3 col-1">
        <h2 class="display-6">Authors</h2>
    </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4 ms-auto">
                <a asp-controller="Books" asp-action="NewAuthor" class="btn btn-primary" style="width:150px">
                Add Author</a>
            </div>
        }
    </div>

<div class="row">
    @foreach(var author in Model){
        <div class="col-lg-4 btn">
            <a class="btn btn-outline-primary" id="list-button" href="filter?author=@author.Id">@author.Name</a>
        </div>
    }
</div>