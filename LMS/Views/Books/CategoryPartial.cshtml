@model LMS.Models.Category

<div class="modal fade" id="addCategory">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Category</h4>
                <button type="button" class="close" data-dismiss="model">
                    <span>X</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="SaveCategory" asp-controller="Books">
					<div class="border p-3 mt-4">
						<div class="row pb-2">
							<h2>Create Category</h2>
							<hr />
						</div>
						<div class="mb-3">
							<label asp-for="Name"></label>
							<input asp-for="Name" class="form-control" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
						<a asp-controller="Books" asp-action="Category" class="btn btn-secondary" style="width:150px">
							Back to List
						</a>
					</div>
				</form>
            </div>

			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-dismiss="model">Close</button>
				<button type="button" class="btn btn-primary" data-save="model">Save</button>
			</div>
        </div>
    </div>
</div>